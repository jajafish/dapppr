extends layout

block content

  section.header

  div.wrap
    section.user_profile
      img.user_pic.profile_center(src='#{user.avatar_url}')

      h2.user_name.profile_center
        | #{user.name}
      div.profile_center
        h2.profile_center_inline
          a(href='#{user.userPortfolioURL}')
            img(src='img/dribbble-ball-mark.png' style='width: 30px; height: 30px;')
            h2.profile_center_inline.likes_number #{user.userLikes} Likes
      
    - var randomizeColor = function(){
    -   var result = Math.floor(Math.random() * ((19-0)+1) + 0);
    -   return colorObject[result].background_color;
    - }

    a.alert
      //- p Enjoy the example of your dapppr store?
      //- .btn Activate Your Store Now.

    section.products

      div.grid
        for png, index in user.userArtWork
          div(class='col-'+index)
            div.item-container
              div.profile_center.shirt-items(style='width: 265px; height: 315px; position: relative; background-color: rgb(255, 255, 255);')
                img.profile_shirts(src='img/crew_front.png' style='background-color: #{randomizeColor()}')
                img.prod_img.profile_center(src='#{png.image_url}' style='z-index: 10;')

  //- section.footer
  //-   div.wrap-big
  //-     h1.dapppr_footer_title
  //-       a(href="#") dapppr
  //-       span.about | about


  section.petition
    div.petition-wrap
      h2.petition-header Petition to Dribbble
      p We want you to earn money directly from your designs.
      p We'll take care of everything else, from storefront hosting, to shirt printing and fulfillment.
      p But first we need your help.Considering this is a commercial application, we need your support to convince Dribbble to let us go through with this. If this is something you believe you could benefit from, please sign up for our service and sign the petition to Dribbble. 

    form(method="post", action="/userSignUpForPetition", class="secondSignupForm")
        input(type="text", name="artistID", value="#{userID}", class="formInputToHide")
        input(type="text", name="newUserEmail", placeholder="email", onfocus="this.placeholder = ''", onblur="this.placeholder = 'email'", class="signupForSiteForm")
        input(type="password", name="newUserPassword", placeholder="password", onfocus="this.placeholder = ''", onblur="this.placeholder = 'password'", class="signupForSiteForm userPassword")
        div.groupedSubmission
          input(type="password", name="newUserPasswordConfirm", placeholder="confirm password", onfocus="this.placeholder = ''", onblur="this.placeholder = 'confirm password'", class="signupForSiteForm lastInputOnForm")
          input(type="submit" class="input-submit" value="Sign Up")

